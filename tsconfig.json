{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "lib": ["es6", "es2017", "dom", "esnext.asynciterable"],
        "resolveJsonModule": true
    },
    "include": ["./src/*"],
    "exclude": ["node_modules"]
}
